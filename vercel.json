{
  "version": 2,
  "buildCommand": "./build.sh",
  "outputDirectory": "f1-data-viz/frontend/dist",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "f1-data-viz/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "f1-data-viz/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/f1-data-viz/frontend/dist/index.html"
    }
  ]
}
